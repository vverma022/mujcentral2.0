generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Confession {
  id          Int       @id @default(autoincrement())
  name        String    
  username    String    @unique       // Autogenerated unique username using uuid
  confession  String    
  createdAt   DateTime  @default(now())                
}

model Profile {
  id              Int      @id @default(autoincrement()) // Primary key
  name            String                               
  gender          String                               
  course          String                               
  major           String                               
  city            String                               
  instagram       String?                              
  twitter         String?                              
  facebook        String?                              
  description     String?                              
  enrollmentYear  Int                                  
  graduationYear  Int                                  
  createdAt       DateTime @default(now())             
  
  photos          Photo[]                              
}

model Photo {
  id         Int      @id @default(autoincrement())    
  url        String                                   // Photo URL
  profileId  Int                                      
  uploadedAt DateTime @default(now())                 

  profile    Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}
